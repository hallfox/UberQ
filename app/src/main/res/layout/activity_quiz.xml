<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hack.bigred15.uberquiz.QuizActivity">

    <TextView
        android:id="@+id/question"
        android:text="@string/hello_world"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fourth_option"
        android:text="D: Hello World!"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="56dp" />


    <Button
        android:id="@+id/third_option"
        android:text="C: Hello World!"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        android:layout_above="@id/fourth_option"
        android:layout_width="fill_parent"
        android:layout_height="56dp" />

    <Button
        android:id="@+id/second_option"
        android:text="B: Hello World!"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        android:layout_above="@id/third_option"
        android:layout_width="fill_parent"
        android:layout_height="56dp" />

    <Button
        android:id="@+id/first_option"
        android:text="A: Hello World!"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        android:layout_above="@id/second_option"
        android:layout_width="fill_parent"
        android:layout_height="56dp" />

</RelativeLayout>
